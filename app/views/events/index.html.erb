<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>User</th>
      <th>Measurement</th>
      <th>Value</th>
      <th>Description</th>
      <th>Contribution</th>
      <th>Mark</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.issue_id %></td>
        <td><%= event.user_id %></td>
        <td><%= event.measurement_id %></td>
        <td><%= event.value %></td>
        <td><%= event.description %></td>
        <td><%= event.contribution %></td>
        <td><%= event.mark %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

